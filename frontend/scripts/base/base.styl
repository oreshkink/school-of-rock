body
  height 100vh
  margin 0
  padding 0
  font-family 'LatoWeb'
  background: black url(/home-background.jpg) no-repeat center center
  background-size cover

//  Информация для главной
.main-info
  display flex
  width 1100px
  margin 180px auto auto auto
  color white

  .main-brand-info
    flex 0 0 600px

    .name-en
      font-family 'LatoWebBlack'
      font-size 85px

    .name-ru
      font-family 'LatoWebThin'
      margin-top -10px
      font-size 72px
      font-weight 100

    .description
      font-family 'LatoWebThin'
      margin-top 20px
      font-size 20px
      line-height 24px


    .read-more
      margin-top 25px

      a
        font-size 19px
        color #a89891

    .promo-toolbar
      margin-top: 35px;

      .btn
        margin-right 20px

  .commercial
    flex 0 0 550px
    padding-left 180px
    margin-top 42px
    box-sizing border-box

    .logo
      font-size 32px

      a
        color white
        text-transform uppercase
        text-decoration none

        &:hover
          color #FFFEC9

    .description
      font-size 18px
      margin-top 15px

.about-info
  color white
  display flex
  justify-content center
  margin-top 80px
  margin-bottom 80px

  .school-description
    width 640px

    .title
      font-size 80px
      font-family 'LatoWebBlack'

    .description
      margin-top 10px

      .thesis
        font-size 32px

      .quote-wrapper
        display flex
        justify-content flex-end
        margin-top 40px
        margin-bottom 40px

        .quote
          border-left 3px solid white
          padding-left 10px
          padding-top 6px
          width 350px
          font-size 16px
          font-style italic

          p
            margin-bottom 6px

      .detail-description
        margin-bottom 10px
        line-height 22px

        p
          margin-bottom 10px

          .make-louder
            font-size 20px
            font-family 'LatoWebBlack'

        ul
          li
            padding-left 20px
            margin-bottom 10px

  .commercial
    width 300px
    margin-left 80px

    .repetirui
      margin-top 15px

      .repetirui-title
        display flex
        align-items flex-end

        .repetirui-icon
          background url('/repetirui.png') no-repeat center center
          width 50px
          height 50px
          margin-right 10px

        a
          font-size 26px
          font-family 'LatoWebBlack'
          text-transform uppercase
          color white

      .repetirui-description
        margin-top 20px
        line-height 24px

    .try-it
      margin-top 30px

      .try-it-title
        display flex
        align-items center
        font-size 26px
        font-family 'LatoWebBlack'

        .try-it-icon
          background url('/try-it.png') no-repeat center center
          width 31px
          height 31px
          margin-right 10px

      .try-it-buttons
        margin-top 20px

        .btn
          margin-bottom 15px