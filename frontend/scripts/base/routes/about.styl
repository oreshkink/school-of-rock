.about-page
  color white
  display flex
  justify-content center
  margin-top 80px
  margin-bottom 80px

  .school-description
    width 640px

    .title
      font-size 80px
      font-family 'LatoWebBlack'

    .description
      margin-top 10px

      .thesis
        font-size 32px

      .quote-wrapper
        display flex
        justify-content flex-end
        margin-top 40px
        margin-bottom 40px

        .quote
          border-left 3px solid white
          padding-left 10px
          padding-top 6px
          width 350px
          font-size 16px
          font-style italic

          p
            margin-bottom 6px

      .detail-description
        margin-bottom 10px
        line-height 22px

        p
          margin-bottom 10px

          .make-louder
            font-size 20px
            font-family 'LatoWebBlack'

        ul
          li
            padding-left 20px
            margin-bottom 10px

  .commercial
    width 300px
    margin-left 80px

    .repetirui
      margin-top 15px

      .repetirui-title
        display flex
        align-items flex-end

        .repetirui-icon
          background url('/repetirui.png') no-repeat center center
          width 50px
          height 50px
          margin-right 10px

        a
          font-size 26px
          font-family 'LatoWebBlack'
          text-transform uppercase
          color white

      .repetirui-description
        margin-top 20px
        line-height 24px

    .try-it
      margin-top 30px

      .try-it-title
        display flex
        align-items center
        font-size 26px
        font-family 'LatoWebBlack'

        .try-it-icon
          background url('/try-it.png') no-repeat center center
          width 31px
          height 31px
          margin-right 10px

      .try-it-buttons
        margin-top 20px

        .btn
          margin-bottom 15px