.teachers-list-page
  width 1110px
  margin auto
  color #EEEEEE
  margin-top 80px
  margin-bottom 80px

  .teachers-list
    margin 50px 0

    .teacher-link
      display inline-block
      margin-right 90px
      margin-bottom 30px

      &:nth-child(5n)
        margin-right 0

    .teacher
      display flex
      width 150px
      height 450px

      .description
        flex 0 0 30px
        height 100%
        position relative

        .name
          transform rotate(90deg)
          transform-origin left top 0
          width 400px
          position absolute
          left 23px

          .instrument
            &:before
              margin 0 10px
              content '|'

      .photo
        width 120px
        height 450px

        img
          max-width 100%
          max-height 100%
        .bw
          display none
        .colored
          display block

      &:hover
        .description
          color #f26a0f
          font-weight bold

        .photo
          .bw
            display block
          .colored
            display none