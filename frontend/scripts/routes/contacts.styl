.contacts-page
  color white

  h1
    margin-bottom 40px

  h2
    font-size 26px
    margin 12px 0

  .contacts
    margin 80px auto 40px auto
    width 1110px

    .contacts-info
      display flex

      ul
        margin 20px 0

        li
          margin 10px 0

        .description
          display inline-block
          margin-right 10px

        .value
          display inline-block

      .contact-address
        width 50%

      .contact-time
        width 50%

    .how-to-get
      margin-top 40px
      line-height 1.4

  .map
      background: black url(/map.jpg) no-repeat center center
      height 578px
      margin-bottom 60px
