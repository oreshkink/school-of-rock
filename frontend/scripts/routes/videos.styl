.videos-page
  color white
  margin 80px auto 40px auto
  width 1110px

  h1
    margin-bottom 40px
    a
      font-size 18px
      margin-left 20px
      color #fffec9

  h2
    font-size 26px
    margin 12px 0

  .videos-list
    display flex
    justify-content space-between
    flex-flow wrap

    .video-item
        flex 0 0 530px
        font-size 18px
        margin-bottom 30px

        .video-title
          margin-bottom 10px
          height 45px
          display flex
          align-items center
