.price
  color white
  margin 80px auto
  width 1110px

  .price-lessons
    margin 40px 0

    ul
      font-size 26px
      display flex
      margin 30px 0 20px 0

      li
        width 50%

        .description
          color #fffec9
          margin-bottom 10px

        .value
          font-size 16px

    .price-lessons-description
      p
       padding 2px 0

  .price-lessons-results
    margin 40px 0
    display flex

    ul
      li
       margin 10px 0

    > div
      width 50%

    .price-lessons-results-title
      font-size 26px
      color #fffec9
      margin-bottom 10px

  .price-types
    margin 20px 0
    display flex

    > div
      width 50%

    .price-types-title
      margin-bottom 10px
      color #fffec9
      font-size 26px

    ul
      li
        display flex
        margin-bottom 10px
        color #f26a0f
        font-size 18px

        .description
          margin-right 20px

  .price-sales-title
    margin-bottom 10px
    color #fffec9
    font-size 26px

  .price-sales
    color #f26a0f
    font-size 18px

    td
      padding 10px 10px 10px 0

