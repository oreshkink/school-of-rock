//  Главное меню
.site-toolbar
  display flex
  height 110px
  align-items center
  margin-bottom 40px

  .logo
    display flex
    flex 0 0 170px
    height 45px

    .social-icons
      display flex
      margin-left 5px

      .social-icon-inst
        width 32px
        height 32px
        margin-left 10px
        background url(/inst-icon.png) 100% 100% no-repeat

      .social-icon-vk
        margin-left 10px
        width 32px
        height 32px
        background url(/vk-icon.png) 100% 100% no-repeat

    .logo-img
      display block
      margin-left 40px
      width 95px
      height 100%
      background url(/logo.png) 100% 100% no-repeat

  .main-menu-wrapper
    width 100%
    font-size 13px

    .main-menu
      display flex
      min-width 720px
      justify-content center
      padding 0
      text-transform uppercase
      font-size 13px
      font-family 'LatoWebBlack'

      .main-menu-section
        list-style none
        padding 0 10px
        margin 0

        a
          color white
          text-decoration none

          &:hover
            color #FFFEC9

  .contacts
    display flex
    align-items center
    flex 0 0 240px
    height 45px

    .address
      color white

      .city
        margin-bottom 10px
        text-align center
        font-size 24px

      .phone
        display block
        text-decoration none

    .map-label
      display block
      background url('/map-label.png') no-repeat 12px 10px
      background-color white
      height 40px
      width 40px
      border-radius 50%
      opacity 0.15
      margin-left 20px

      &:hover
        opacity 1
