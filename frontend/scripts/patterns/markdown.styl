.markdown
  margin 40px 0
  line-height 1.4

  p
    margin 10px 0

  h2
    font-size 32px
    font-weight normal

  h3
    font-size 20px
    font-weight normal

  ul
    margin 20px 0

    li
      margin 5px 0 5px 25px
      list-style disc

    ul
      margin 10px 0

      li
        list-style circle
        margin 5px 0 5px 20px

  blockquote
    line-height 1.4em
    width 500px
    padding 10px 20px
    margin 0 0 20px
    font-size: 18px
    border-left: 5px solid #eee

  hr
    margin-top 30px
    margin-bottom 30px
    border 0
    border-top 2px solid #676767
