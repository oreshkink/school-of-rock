div.site-toolbar

    // Логотип
    div.logo
        a(href='/' class='logo-img')

    // Главное меню
    - var siteToolbarSections = []
    - siteToolbarSections.push({ url: '/about', title: 'О школе' });
    - siteToolbarSections.push({ url: '/uroki', title: 'Направления' });
    - siteToolbarSections.push({ url: '/teachers', title: 'Преподаватели' });
    - siteToolbarSections.push({ url: '/videos', title: 'Видео' });
    - siteToolbarSections.push({ url: '/contacts', title: 'Контакты' });
    - siteToolbarSections.push({ url: '/prices', title: 'Цены' });
    - siteToolbarSections.push({ url: '/sales', title: 'Скидки' });

    div.main-menu-wrapper
        ul.main-menu
            each section in siteToolbarSections
                li.main-menu-section
                    a(href=section.url)= section.title

    // Контакты
    div.contacts
